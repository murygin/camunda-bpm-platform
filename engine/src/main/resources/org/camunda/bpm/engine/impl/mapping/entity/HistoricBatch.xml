    ${limitAfter}
  </select>

  <select id="selectHistoricBatchCountByQueryCriteria" parameterType="org.camunda.bpm.engine.impl.batch.history.HistoricBatchQueryImpl" resultType="long">
    select count(*)
    <include refid="selectHistoricBatchesByQueryCriteriaSql"/>
